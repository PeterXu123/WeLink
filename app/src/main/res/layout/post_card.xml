<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/post_card_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/post_card_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/post_card_user_image"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/post_card_user_image"
            android:text="TextView" />

        <TextView
            android:id="@+id/post_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/post_card_user_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@id/post_card_user_name"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/post_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_card_user_image"
            android:layout_margin="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_card_text"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_card_post_image1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/post_card_post_image2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/post_card_post_image3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>