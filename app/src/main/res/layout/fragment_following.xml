<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".following.FollowingFragment">

    <EditText
        android:id="@+id/searchName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/searchUserButton1"
        android:ems="10"
        android:hint="search user by username"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/searchUserButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/search_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/followingList1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchName1"
        android:layout_marginTop="10dp" />


</RelativeLayout>
